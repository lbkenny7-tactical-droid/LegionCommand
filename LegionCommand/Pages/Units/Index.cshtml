@page
@model LegionCommand.Pages.Units.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        <select asp-for="UnitRank" asp-items="Model.UnitRanks">
            <option value="">All</option>
        </select>
        <label>Title: <input type="text" asp-for="SearchString" /></label>
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Unit[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit[0].Rank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit[0].Points)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit[0].UnitCard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit[0].Portrait)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit[0].Upgrades)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit[0].Faction)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Unit) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Points)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitCard)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Portrait)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Upgrades)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faction)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
